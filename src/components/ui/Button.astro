---
/**
 * Button Component
 *
 * Reusable button component following the Burjassot Llars Design System.
 * Supports multiple variants, sizes, and states.
 *
 * @example
 * <Button variant="primary" size="md">Click me</Button>
 * <Button variant="outline" size="lg" disabled>Disabled</Button>
 * <Button variant="ghost" as="a" href="/contact">Link Button</Button>
 */

import type { HTMLAttributes } from 'astro/types';
import { cn } from '@/lib/utils';

export type ButtonVariant = 'primary' | 'secondary' | 'outline' | 'ghost' | 'link';
export type ButtonSize = 'sm' | 'md' | 'lg';

export interface Props extends HTMLAttributes<'button'> {
  /** Visual style variant */
  variant?: ButtonVariant;
  /** Size of the button */
  size?: ButtonSize;
  /** Whether the button is disabled */
  disabled?: boolean;
  /** Render as a different element (e.g., 'a' for links) */
  as?: 'button' | 'a';
  /** URL for link buttons (when as="a") */
  href?: string;
  /** Additional CSS classes */
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  disabled = false,
  as = 'button',
  href,
  class: className,
  ...rest
} = Astro.props;

// Base styles shared by all variants
const baseStyles = 'inline-flex items-center justify-center gap-2 font-semibold transition-colors rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

// Variant-specific styles
const variantStyles: Record<ButtonVariant, string> = {
  primary: 'bg-primary text-primary-foreground hover:bg-primary-dark focus:ring-primary',
  secondary: 'bg-secondary text-secondary-foreground hover:bg-secondary-dark focus:ring-secondary',
  outline: 'bg-transparent border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground focus:ring-primary',
  ghost: 'bg-transparent text-gray-700 hover:bg-gray-100 focus:ring-gray-300',
  link: 'bg-transparent text-primary font-medium underline-offset-4 hover:underline hover:text-primary-dark focus:ring-primary focus:ring-offset-0 p-0',
};

// Size-specific styles
const sizeStyles: Record<ButtonSize, string> = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

// Link variant has different sizing (no padding by default)
const linkSizeStyles: Record<ButtonSize, string> = {
  sm: 'text-sm',
  md: 'text-base',
  lg: 'text-lg',
};

const computedStyles = cn(
  baseStyles,
  variantStyles[variant],
  variant === 'link' ? linkSizeStyles[size] : sizeStyles[size],
  className
);

const Element = as;
---

{as === 'a' ? (
  <a
    href={href}
    class={computedStyles}
    aria-disabled={disabled ? 'true' : undefined}
    {...rest}
  >
    <slot />
  </a>
) : (
  <button
    class={computedStyles}
    disabled={disabled}
    {...rest}
  >
    <slot />
  </button>
)}
